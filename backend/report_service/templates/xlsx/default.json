{
  "sheets": {
    "historical": {
      "name": "Исторические данные",
      "columns": [
        {"header": "ID продукта", "field": "product_id", "width": 10},
        {"header": "Наименование продукта", "field": "product_name", "width": 30},
        {"header": "Дата", "field": "date", "width": 15, "format": "date"},
        {"header": "Фактический спрос", "field": "actual_demand", "width": 20, "format": "number"}
      ]
    },
    "forecast": {
      "name": "Прогноз спроса",
      "columns": [
        {"header": "ID продукта", "field": "product_id", "width": 10},
        {"header": "Наименование продукта", "field": "product_name", "width": 30},
        {"header": "Дата", "field": "date", "width": 15, "format": "date"},
        {"header": "Прогноз", "field": "forecasted_demand", "width": 15, "format": "number"},
        {"header": "Нижняя граница", "field": "confidence_low", "width": 15, "format": "number"},
        {"header": "Верхняя граница", "field": "confidence_high", "width": 15, "format": "number"},
        {"header": "Точность", "field": "accuracy", "width": 12, "format": "percent"},
        {"header": "Статус", "field": "status", "width": 15, "format": "status"},
        {"header": "Ручная корректировка", "field": "is_manual", "width": 10, "format": "boolean"}
      ]
    },
    "pivot": {
      "name": "Сводные данные",
      "pivot_settings": {
        "rows": ["product_name"],
        "columns": ["date"],
        "values": ["forecasted_demand"],
        "aggregation": "sum"
      }
    },
    "info": {
      "name": "Информация",
      "items": [
        {"name": "Начальная дата", "format": "date"},
        {"name": "Конечная дата", "format": "date"},
        {"name": "Количество продуктов", "format": "number"},
        {"name": "Точность прогнозов", "format": "percent"},
        {"name": "Дата генерации", "format": "date_time"}
      ]
    }
  },
  "formats": {
    "header": {
      "bold": true,
      "text_wrap": true,
      "valign": "top",
      "fg_color": "#D7E4BC",
      "border": 1
    },
    "date": {
      "num_format": "dd.mm.yyyy"
    },
    "date_time": {
      "num_format": "dd.mm.yyyy hh:mm:ss"
    },
    "number": {
      "num_format": "0.00"
    },
    "percent": {
      "num_format": "0.00%"
    },
    "status": {
      "green": {"fg_color": "#C6EFCE"},
      "yellow": {"fg_color": "#FFEB9C"},
      "red": {"fg_color": "#FFC7CE"}
    }
  }
} 